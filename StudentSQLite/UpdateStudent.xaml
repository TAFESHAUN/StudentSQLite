<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="StudentSQLite.UpdateStudent"
             Title="UpdateStudent">
    <ContentPage.Content>
        <Frame BackgroundColor="#F5F5DC" Padding="10" Margin="20">
            <StackLayout>
                <!-- Input Fields for Updating Student Details -->
                <Entry x:Name="GivenNameEntry" Placeholder="Given Name" />
                <Entry x:Name="FamilyNameEntry" Placeholder="Family Name" />
                <Entry x:Name="StudentNumberEntry" Placeholder="Student Number" />
                <DatePicker x:Name="EnrollmentDatePicker" Date="{Binding EnrollmentDate}" />

                <!-- Update Button -->
                <Button Text="Update" Clicked="Update_Clicked" />
            </StackLayout>
        </Frame>
    </ContentPage.Content>
</ContentPage>
